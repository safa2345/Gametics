<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" stylesheets="@../css/home_page_style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mir.gametics.HomePageController">

   <center>
      <VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="1220.0">
            <Label id="title" alignment="CENTER" text="Gametics">
            <VBox.margin>
               <Insets top="20.0" />
            </VBox.margin></Label>
         <Label id="description" text="A Detailed Database of Games" />
         <VBox prefHeight="691.0" prefWidth="1200.0">
            <Hyperlink fx:id="allGames" text="List All Available Games">
               <VBox.margin>
                  <Insets bottom="10.0" left="80.0" top="50.0" />
               </VBox.margin>
               <padding>
                  <Insets left="20.0" right="20.0" top="20.0" />
               </padding>
            </Hyperlink>
               <Label text="Lists of all games available in database in alphabetic order">
                  <VBox.margin>
                     <Insets left="100.0" />
                  </VBox.margin>
               </Label>
            <Hyperlink fx:id="recentGames" text="Recently Added Games">
               <padding>
                  <Insets left="20.0" right="20.0" top="20.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="10.0" left="80.0" top="20.0" />
               </VBox.margin>
            </Hyperlink>
            <Label text="Only show games that are recently added to database">
               <VBox.margin>
                  <Insets left="100.0" />
               </VBox.margin>
            </Label>
            <Hyperlink fx:id="popularGames" text="Most Popular Games">
               <padding>
                  <Insets left="20.0" right="20.0" top="20.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="10.0" left="80.0" top="20.0" />
               </VBox.margin>
            </Hyperlink>
            <Label text="Only show games that have highest rating and reviews">
               <VBox.margin>
                  <Insets left="100.0" />
               </VBox.margin>
            </Label>
            <Hyperlink fx:id="searchGames" text="Search Games">
               <VBox.margin>
                  <Insets bottom="10.0" left="80.0" top="20.0" />
               </VBox.margin>
               <padding>
                  <Insets left="20.0" right="20.0" top="20.0" />
               </padding>
            </Hyperlink>
            <Label text="Search for games either by name or other criteria">
               <VBox.margin>
                  <Insets left="100.0" />
               </VBox.margin>
            </Label>
            <HBox prefHeight="41.0" prefWidth="1200.0">
                  <Label text="Are you a admin?">
                     <padding>
                        <Insets left="100.0" top="11.0" />
                     </padding>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <Hyperlink fx:id="logIn" text="Log IN" />
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
                  <Label text="or Want to become a admin?">
                     <padding>
                        <Insets left="100.0" top="11.0" />
                     </padding>
                  </Label>
                  <Hyperlink fx:id="createAccount" text="Create An Account" />
            </HBox>
         </VBox>
      </VBox>
   </center>
</BorderPane>
